{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":timezone(Asia/Tokyo)"
  ],
  "labels": [
    "Renovate"
  ],
  "prHourlyLimit": 0,
  "prConcurrentLimit": 5,
  "dependencyDashboard": true,
  "packageRules": [
    {
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true
    }
  ],
  "internalChecksFilter": "strict",
  "major": {
    "stabilityDays": 2
  },
  "minor": {
    "stabilityDays": 1
  }
}
